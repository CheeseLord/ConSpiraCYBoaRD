#:kivy 2.0.0
<ConspiracyBoard>:

    Widget:
        Scatter:
            id: spoon_scatter
            size_hint: None, None
            size: spoon.size
            pos: (100, 200)

            canvas:
                Color:
                    rgba: 1, 0.8, 0, 1

                Rectangle:
                    pos: 0, 0
                    size: spoon_scatter.size

            Label:
                id: spoon
                text: 'My spoon is too big'
                size: 150, 20

        Scatter:
            id: banana_scatter
            size_hint: None, None
            size: banana.size
            pos: (300, 100)

            canvas:
                Color:
                    rgba: 1, 0.8, 0, 1

                Rectangle:
                    pos: 0, 0
                    size: banana_scatter.size

            Label:
                id: banana
                text: 'I am a banana'
                size: 110, 20

        Scatter:
            size_hint: None, None
            size: image.size

            Image:
                id: image
                source: 'assets/test.png'
                size: (200, 200)

