#:kivy 2.0.0
<ConspiracyBoard>:

    Widget:
        Scatter:
            id: spoon
            size_hint: None, None
            pos: (100, 200)

            canvas:
                Color:
                    rgba: 1, 0.8, 0, 1

                Rectangle:
                    pos: 0, 0
                    size: self.size

            Label:
                text: 'My spoon is too big'
                text_size: self.width, None

        Scatter:
            id: banana
            size_hint: None, None
            pos: (300, 100)

            canvas:
                Color:
                    rgba: 1, 0.8, 0, 1

                Rectangle:
                    pos: 0, 0
                    size: self.size

            Label:
                text: 'I am a banana'
                text_size: self.width, None

        Scatter:
            id: image
            size_hint: None, None

            Image:
                source: 'assets/test.png'
                size: (100, 100)

